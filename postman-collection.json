{
  "info": {
    "name": "Chez Nest-Or API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000"
    }
  ],
  "item": [
    {
      "name": "Pizzas",
      "item": [
        {
          "name": "List all pizzas",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/pizzas",
              "host": ["{{baseUrl}}"],
              "path": ["pizzas"]
            }
          }
        },
        {
          "name": "Get pizza by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/pizzas/1",
              "host": ["{{baseUrl}}"],
              "path": ["pizzas", "1"]
            }
          }
        },
        {
          "name": "Search by ingredient",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/pizzas?ingredient=mozzarella",
              "host": ["{{baseUrl}}"],
              "path": ["pizzas"],
              "query": [{ "key": "ingredient", "value": "mozzarella" }]
            }
          }
        },
        {
          "name": "Search by multiple ingredients",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/pizzas?ingredients=tomate,mozzarella",
              "host": ["{{baseUrl}}"],
              "path": ["pizzas"],
              "query": [{ "key": "ingredients", "value": "tomate,mozzarella" }]
            }
          }
        },
        {
          "name": "Create pizza",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/pizzas",
              "host": ["{{baseUrl}}"],
              "path": ["pizzas"]
            },
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Sicilienne\",\n  \"price\": 13,\n  \"ingredients\": [\"tomate\", \"mozzarella\", \"anchois\", \"olives\"],\n  \"available\": true\n}"
            }
          }
        },
        {
          "name": "Update pizza (PUT)",
          "request": {
            "method": "PUT",
            "url": {
              "raw": "{{baseUrl}}/pizzas/1",
              "host": ["{{baseUrl}}"],
              "path": ["pizzas", "1"]
            },
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Margherita Classique\",\n  \"price\": 9,\n  \"ingredients\": [\"tomate\", \"mozzarella\", \"basilic frais\"],\n  \"available\": true\n}"
            }
          }
        },
        {
          "name": "Delete pizza",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/pizzas/6",
              "host": ["{{baseUrl}}"],
              "path": ["pizzas", "6"]
            }
          }
        }
      ]
    },
    {
      "name": "Drinks",
