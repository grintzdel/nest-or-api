              "raw": "{\n  \"pizzas\": [4],\n  \"drinks\": [1],\n  \"desserts\": []\n}"
            }
          }
        },
        {
          "name": "Update order (PUT)",
          "request": {
            "method": "PUT",
            "url": {
              "raw": "{{baseUrl}}/orders/1",
              "host": ["{{baseUrl}}"],
              "path": ["orders", "1"]
            },
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"pizzas\": [2, 4],\n  \"drinks\": [2],\n  \"desserts\": [3]\n}"
            }
