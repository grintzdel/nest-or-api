              "path": ["orders", "1", "processed"]
            },
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"processed\": true\n}"
            }
          }
        },
        {
          "name": "Delete order",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/orders/2",
